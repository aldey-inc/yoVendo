  </section>
  <section>
  <table class="responstable">

  	<tbody>
  		{% for client  in salesForMonth  %}
  			<tr>
  			<th>{{ client['nameClient']}}</th>
  			{% for i in startMonths..endMonths  %}
  				{% if client[i] is defined %}
  					<td>{{client[i]}}</td>
  				{% else %}
  					<td>{{0}}	</td>
  				
  				{% endif %}			
  			{% endfor %}
  			<td> {{client['total']}}</td>
  			</tr>
  		{% endfor %}
  	</tbody>
    <thead>
        <tr>
          <td>AÃ±o</td>
          {% for i in (startMonths/12)|number_format(0,'.','')..(endMonths/12)|number_format(0,'.','') %}
            <th colspan="{{ 13-(startMonths%12) }}">{{ i }}</th>       
          {% endfor %}

        </tr> 
        <tr>
          <td>Mes</td>
          {% for i in (startMonths)..(endMonths) %}
            {% if i%12 == 0%}
            <th> 12</th>
            {% else %}
            <th> {{i%12}} </th>
            {% endif %}
          {% endfor %}
          <th>Total</th>
        </tr>         

    </thead>
  	<tfoot>
  	</tfoot>
  </table>
  </section>

{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="./jquery.datetimepicker.css"/ >

